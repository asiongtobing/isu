<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <LinearLayout
        android:id="@+id/aboutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9000000">
        <ImageView
            android:id="@+id/ic_launcher"
            android:contentDescription="@string/isu_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/text_white"
            android:text="@string/about"
            android:layout_gravity="center|top"
            android:gravity="center" />
        <TextView
            android:id="@+id/version"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/version"
            android:textColor="@color/text_white"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/version_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/version_summary"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/dev_info"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:text="@string/dev_info"
            android:layout_gravity="center"
            android:gravity="center" />
        <ImageView
            android:id="@+id/ic_gmail"
            android:contentDescription="@string/gmail_icon"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/googlemail"
            android:gravity="center" />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:text="@string/email"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/email_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/email_summary"
            android:layout_gravity="center"
            android:gravity="center" />
        <ImageView
            android:id="@+id/ic_xda"
            android:contentDescription="@string/xda_icon"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_xda"
            android:gravity="center" />
        <TextView
            android:id="@+id/xda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:text="@string/xda_summary"
            android:layout_gravity="center"
            android:gravity="center" />
        <ImageView
            android:id="@+id/ic_git"
            android:contentDescription="@string/github_icon"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_github"
            android:gravity="center" />
        <TextView
            android:id="@+id/git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:text="@string/github"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/git_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/git_summary"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/app_license"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:text="@string/app_license"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/appcompat_v7"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/appcompat_v7"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/busybox"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/busybox"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/design"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/design"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/material_dialogs"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/material_dialogs"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/okhttp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/okhttp"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/play_safetynet"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/play_safetynet"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/preference_v14"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/preference_v14"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/resetprop"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/resetprop"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/sepolicy_inject"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/sepolicy_inject"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/support_v4"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/support_v4"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/support_v13"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/support_v13"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/ztzip"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/ztzip"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/empty"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
