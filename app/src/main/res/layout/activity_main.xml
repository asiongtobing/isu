<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:padding="5dp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Switch
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="@string/su_switch" 
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/mySwitch"
                android:layout_marginTop="22dp"
                android:text="@string/su_state"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/switchStatus_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/switchStatus"
                android:layout_marginTop="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />
	    <Button
	        android:id="@+id/buttonAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
		android:background="@drawable/button"
                android:layout_below="@+id/switchStatus"
                android:layout_marginTop="80dp"
                android:text="@string/about"
                android:textStyle="bold"
	        android:textColor="@color/button_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <ImageView
                android:id="@+id/ic_launcher"
                android:layout_below="@+id/buttonAbout"
                android:layout_marginTop="70dp"
                android:contentDescription="turbotoast_icon"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
