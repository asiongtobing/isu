<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Switch
            android:id="@+id/suSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/switchStatus_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/su_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
	<View
	    android:layout_width="match_parent"
            android:layout_marginTop="10dp"
	    android:layout_height="2dp"
	    android:background="@color/Separator"/>
        <TextView
            android:id="@+id/kernel_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <Switch
            android:id="@+id/BootSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/BootSwitch_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
	<View
	    android:layout_width="match_parent"
            android:layout_marginTop="15dp"
	    android:layout_height="2dp"
	    android:background="@color/Separator"/>
        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_marginTop="25dp"
            android:text="@string/about"
            android:textStyle="bold"
            android:textColor="@color/button_text"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <ImageView
            android:id="@+id/ic_launcher"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/isu_icon"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_launcher"/>
    </LinearLayout>
</ScrollView>
